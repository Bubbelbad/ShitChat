<Window x:Class="ShitChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UserControls="clr-namespace:ShitChat.UserControls"
        xmlns:local="clr-namespace:ShitChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <!--- Menu Bar -->
        <UserControls:menuBar x:Name="MenuBar"  />

        <!--- User Menu -->
        <UserControls:dropDownMenu x:Name="DropDownMenu" HorizontalAlignment="Left" Grid.Row="1" Width="200" Background="Black" />

        <!-- Chat Window -->
        <UserControls:chatWindow x:Name="ChatWindow" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" />

        <!--Profile Window-->
        <UserControls:Profile x:Name="Profile" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="455" Width="720" Margin="190,0,0,0"/>
        
        <!--Front Window-->
        <UserControls:FrontWindow x:Name="frontWindow" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="455" Width="720" Margin="190,0,0,0" />

    </Grid>
</Window>
