<Window x:Class="ShitChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UserControls="clr-namespace:ShitChat.UserControls"
        xmlns:local="clr-namespace:ShitChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        
        <!--- Menu Bar -->
        <UserControls:menuBar x:Name="MenuBar"  />
        
        <!--- User Menu -->
        <UserControls:dropDownMenu HorizontalAlignment="Left" Grid.Row="1" Width="200" Background="Black" />
        
        <!-- Chat Window -->
        <UserControls:chatWindow Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" />


    </Grid>
</Window>
