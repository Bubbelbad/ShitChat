<UserControl x:Class="ShitChat.UserControls.menuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShitChat.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>    
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtInput" VerticalAlignment="Center" BorderThickness="2" Grid.Column="1" Margin="200, 0, 100, 0"
       FontSize="16" FontWeight="Light" Background="Black" />
            <TextBlock x:Name="tbPlaceHolder" Text="Search for friends and events..." FontSize="16" FontWeight="Light" Grid.Column="1" Margin="205, 0, 100, 0"
       Foreground="DarkGray" VerticalAlignment="Center" />
            <Button x:Name="btnClear" Width="30" Height="25" HorizontalAlignment="Right" Content="X"  Grid.Column="1"
    Background="Transparent" Foreground="LightGray" BorderThickness="0" Margin="0, 0, 100, 0" />
            <Button x:Name="btn_userMenu" Content="      Username" Width="100" Height="25" Margin="5, 0, 10, 3" Grid.Column="1" Background="Black" 
            Foreground="AliceBlue" HorizontalAlignment="Left" VerticalAlignment="Center" />

            <Image x:Name="userIcon" Grid.Column="1" Source="/UserControls/userIcon.png" HorizontalAlignment="Left" Width="25" Margin="5, 0, 0, 6" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
