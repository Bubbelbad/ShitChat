<UserControl
    x:Class="ShitChat.UserControls.menuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShitChat.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Background="#FF336444">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="txtInput"
                Grid.Column="1"
                Margin="195,0,200,0"
                VerticalAlignment="Center"
                Background="Black"
                BorderThickness="2"
                FontSize="16"
                FontWeight="Light" />
            <TextBlock
                x:Name="tbPlaceHolder"
                Grid.Column="1"
                Margin="200,0,200,0"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Light"
                Foreground="DarkGray"
                Text="Search for friends and events..." />
            <Button
                x:Name="btnClear"
                Grid.Column="1"
                Width="30"
                Height="25"
                Margin="0,0,200,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Content="X"
                Foreground="LightGray" />
            <Button
                x:Name="btn_userMenu"
                FontSize="16"
                Grid.Column="1"
                Width="175"
                Height="40"
                Margin="0,0,0,0"
                HorizontalContentAlignment="Left"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="Transparent"
                Content="       Username"
                Foreground="AliceBlue" />

            <Image
                x:Name="userIcon"
                Grid.Column="1"
                Width="25"
                Margin="5,0,0,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/UserControls/account.png" OpacityMask="Black" />
        </Grid>
    </Grid>
</UserControl>
