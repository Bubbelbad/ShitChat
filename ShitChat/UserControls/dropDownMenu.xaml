            Grid.Row="6"
            Height="25"
            Margin="10,12,18,12"
            Cursor="Hand">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" />
            </Button.Background>
        </Button>
