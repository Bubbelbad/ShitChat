<UserControl x:Class="ShitChat.UserControls.friendsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShitChat.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="435" d:DesignWidth="700">

    <Grid>
        <local:dropDownMenu Margin="0,44,524,0"/>
        <local:menuBar/>
        <Frame x:Name="Background" Content="" Margin="176,44,0,0" Foreground="{x:Null}" Background="#FFFCFCFC"/>
        <Button x:Name="AddFriends" Content="Add a friend" Margin="291,304,320,100" Click="AddFriends_Click"/>
        <Button x:Name="RemoveFriends" Content="Remove a friend" Margin="493,304,118,100" Click="RemoveFriends_Click"/>
        <TextBox x:Name="textboxAddFriend" TextWrapping="Wrap" Text="Add a new friend by searching for their username!" Margin="303,113,110,288"/>
        <TextBox x:Name="searchNewFriends" HorizontalAlignment="Left" Margin="380,146,0,0" TextWrapping="Wrap" Text="Search here" VerticalAlignment="Top" Width="120" Opacity="0.59" AcceptsReturn="True"/>
        <ListBox x:Name="removeFriend_ListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="251,67,49,168" Width="400" Height="200" SelectionChanged="removeFriend_ListBox_SelectionChanged"/>

    </Grid>



</UserControl>
