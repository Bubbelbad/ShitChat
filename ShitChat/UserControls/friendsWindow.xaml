<UserControl
    x:Class="ShitChat.UserControls.friendsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShitChat.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="200,10,0,0"
    d:DesignHeight="435"
    d:DesignWidth="700"
    Background="#FF336444"
    mc:Ignorable="d">

    <Grid
        Margin="20,20,20,20"
        Background="#FF336444"
        OpacityMask="Black"
        RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <TranslateTransform />
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="29*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Margin="10,60,100,100"
            Background="#FF284E35"
            CornerRadius="5,5,5,5">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
        </Border>
        <Label
            Margin="15"
            Content="Friends"
            FontSize="25"
            Foreground="White" />
        <ListBox
            x:Name="removeFriend_ListBox"
            Margin="15,65,105,105"
            Background="#FF284E35"
            FontSize="16"
            Foreground="White"
            BorderBrush="Transparent"
            IsEnabled="True"
            RenderTransformOrigin="0.496,0.457"
            SelectionChanged="removeFriend_ListBox_SelectionChanged"
            Visibility="Visible">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-0.373" />
                    <TranslateTransform />
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Button
            x:Name="RemoveFriends"
            Width="95"
            Height="30"
            Margin="37,362,482,48"
            Panel.ZIndex="1"
            Click="RemoveFriends_Click"
            Content="Remove friend"
            IsEnabled="True"
            Visibility="Visible" />
        <Label
            x:Name="textHelper"
            Grid.ColumnSpan="2"
            Margin="-1,4,2,389"
            Content="Here is your friendlist, click on them and then the button to remove them"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Visibility="Visible" />

    </Grid>

</UserControl>
